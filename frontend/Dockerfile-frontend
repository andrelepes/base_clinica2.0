# Dockerfile para Frontend (Produção)
FROM node:20 as builder

WORKDIR /usr/src/app

# Copiar arquivos e instalar dependências
COPY package*.json ./
RUN npm ci

COPY . .

# Construir para produção
RUN npm run build

# Segunda etapa - Servidor nginx
FROM nginx:alpine

# Copiar arquivos construídos
COPY --from=builder /usr/src/app/build /usr/share/nginx/html

# Configuração personalizada do nginx (opcional)
COPY nginx.conf /etc/nginx/nginx.conf

# Porta padrão do nginx
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]